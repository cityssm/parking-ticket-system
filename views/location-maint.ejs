<%- include('_header'); -%>

<div class="columns is-variable is-4-mobile is-4-tablet is-block-print" id="is-site-layout">
  <%- include("_sideMenu-admin"); -%>
  <div class="column">
    <nav class="breadcrumb">
      <ul>
        <li><a href="/dashboard">Home</a></li>
        <li class="is-active">
          <a href="#" aria-current="page">
            <span class="icon is-small"><i class="fas fa-cog" aria-hidden="true"></i></span>
            <span>Parking Locations</span>
          </a>
        </li>
      </ul>
    </nav>

    <h1 class="title is-1">
      Parking Locations
    </h1>

    <div class="fixed-container is-fixed-bottom-right has-margin-20 has-text-right is-hidden-print">
      <button class="button is-circle is-primary has-tooltip-left" id="is-add-location-button" data-tooltip="Create a New Location" type="button">
        <i class="fas fa-plus" aria-hidden="true"></i>
        <span class="sr-only">Create a New Location</span>
      </button>
    </div>

    <div class="box">
      <div class="columns">
        <div class="column">
          <div class="field">
            <label class="label" for="locationFilter--locationName">Location Name</label>
            <div class="control has-icons-left">
              <input class="input" id="locationFilter--locationName" type="text" maxlength="30" />
              <span class="icon is-small is-left">
                <i class="fas fa-filter" aria-hidden="true"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="column">
          <div class="field">
            <label class="label" for="locationFilter--locationClassKey">Location Class</label>
            <div class="control is-expanded has-icons-left">
              <div class="select is-fullwidth">
                <select id="locationFilter--locationClassKey"></select>
              </div>
              <span class="icon is-small is-left">
                <i class="fas fa-filter" aria-hidden="true"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="locationResults"></div>
  </div>
</div>

<%- include('_footerA'); -%>

<script>
  pts.locationsInit = <%- JSON.stringify(locations) -%>;
</script>

<script src="/javascripts/location-maint.min.js"></script>

<%- include('_footerB'); -%>
